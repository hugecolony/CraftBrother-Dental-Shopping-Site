@model IEnumerable<CraftBrothers.Models.Brand>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Brands List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Brand" asp-action="Create" class="btn btn-primary">
                Create New Brands
            </a>
        </div>
    </div>
    <br /><br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Brands Name
                    </th>

                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="100%">
                            @obj.Name
                        </td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Brand" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary">
                                    Edit
                                </a>
                                <a asp-controller="Brand" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger">
                                    Delete
                                </a>
                            </div>
                    </tr>
                }
            </tbody>
        </table>
         
    }
    else
    {
        <p>No Brand Exists</p>
    }
</div>